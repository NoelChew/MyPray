<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/relative_layout_pic"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="200dp">

        <FrameLayout
            android:id="@+id/frame_layout_event"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_event"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000" />

        </FrameLayout>

    </RelativeLayout>

    <TextView
        android:padding="20dp"
        android:layout_below="@+id/relative_layout_pic"
        android:text="Order is placed successfully.\nPress INVITE to invite your family and friends to the event."
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/linear_layout_buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_invite"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="15dp"
            android:background="@color/btn_yellow"
            android:layout_weight="1"
            android:text="Invite" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="15dp"
            android:background="@color/btn_green"
            android:layout_weight="1"
            android:text="Go Home" />

    </LinearLayout>

</RelativeLayout>